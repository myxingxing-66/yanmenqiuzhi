<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/num"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6.0dip"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/name"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6.0dip"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#9933CC"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/isb"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:padding="5dp"
            android:singleLine="true"
            android:text="条码号："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/isbn"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@id/isb"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/auth"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:padding="5dp"
            android:singleLine="true"
            android:text="作者："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/author"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@id/auth"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lend"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:padding="5dp"
            android:singleLine="true"
            android:text="借阅日期："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lendday"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@id/lend"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@drawable/dianji" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/give"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:padding="5dp"
            android:singleLine="true"
            android:text="归还日期："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/giveday"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@id/give"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/loca"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:padding="5dp"
            android:singleLine="true"
            android:text="馆藏地："
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/aa"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/loca"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@id/loca"
            android:background="@drawable/location"
            android:padding="5dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/location"
            style="@style/Smile.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@id/aa"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>