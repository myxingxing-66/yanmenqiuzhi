<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="68dp"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/lib_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/goo" />

    <TextView
        android:id="@+id/lib_til"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/lib_image"
        android:text="TextView"
        android:textColor="@color/base_color_text_gray"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/lib_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/lib_til"
        android:layout_alignParentRight="true"
        android:src="@drawable/goo" />

</RelativeLayout>