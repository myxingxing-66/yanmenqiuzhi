<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6.0dip"
        android:padding="5dp"
        android:singleLine="true"
         android:textColor="#9933CC"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4.0dip"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4.0dip"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"/>
  
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
     <TextView 
        android:id="@+id/asord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="荐购日期："
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4.0dip"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        />
    <TextView 
        android:id="@+id/asordday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/asord"
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4.0dip"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        />
    </RelativeLayout>
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <TextView 
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4.0dip"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:text="荐购状态："
        />
    <TextView 
        android:id="@+id/now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/no"
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4.0dip"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        />
    </RelativeLayout>
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <TextView 
        android:id="@+id/bei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="处理备注："
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4.0dip"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        />
    <TextView 
        android:id="@+id/beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bei"
        style="@style/Smile.TextView._Black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4.0dip"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        />
    </RelativeLayout>
    

</LinearLayout>
